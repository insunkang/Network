package single.console.chat;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.Socket;
import java.net.UnknownHostException;

//서버에서 클라이언트로 데이터를 전송하는 작업을 수행하는 쓰레드
public class ServerSenderThread extends Thread{
	Socket socket;

	public ServerSenderThread(Socket socket) {
		super();
		this.socket = socket;
	}
	//서버가 전달한 데이터를 읽어서 출력

	@Override
	public void run() {
		PrintWriter out = null;
		BufferedReader keyin =null;
		try {

			out = new PrintWriter(socket.getOutputStream(),true);
			keyin = new BufferedReader(new InputStreamReader(socket.getInputStream()));
			String sendMsg =""; //클라이언트로 보낼 메시지
			while(true) {
				resMsg = keyin.readLine();
				if (resMsg==null) {
					break;
				}
				System.out.println("서버>>"+resMsg);
			}
		
		} catch (UnknownHostException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch(IOException e) {
			e.printStackTrace();
		}
	}
	
}
