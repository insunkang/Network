package network;

import java.io.DataInputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.InetAddress;
import java.net.ServerSocket;
import java.net.Socket;

public class MyNetServer02 {

	public static void main(String[] args) {
		Socket client = null;
		InputStream is = null; //클라이언트와 input할 수 있는 스트림
		DataInputStream dis = null; //최종적으로 클라잉너트와 DataInputStream을 이용
		OutputStream os = null;
		try {
			//클라이언트와 통신할 수 있도록 준비
			ServerSocket server = new ServerSocket(12345);
			System.out.println("서버 준비 완료 .... 클라리언트의 접속을 기다립니다.");
			//여러 클라이언트에게 서비스를 하기 위해서 무한루프
			while(true) {
			client = server.accept();
			InetAddress clientInfo = client.getInetAddress();
			System.out.println("접속한클라이언트"+clientInfo.getHostAddress());
			}
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

}
